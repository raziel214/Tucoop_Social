<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:cardview="http://schemas.android.com/apk/res-auto"
android:id="@+id/prictureCard"
android:layout_width="match_parent"
android:layout_height="@dimen/height_cardview_agreement"
cardview:cardCornerRadius="@dimen/cornerradius_cardview_agreement"
android:layout_marginBottom="@dimen/activity_vertical_margin"
android:background="@drawable/fondo1"
    >

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo1"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview_agreement"
    >
    <ImageView
        android:id="@+id/picture_CardAgreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagecard_agreement"
        android:background="@drawable/image"
        android:scaleType="centerCrop"
        android:transitionName="@string/transitionname_picture"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/backgroundtext_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/agreement_card"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:text="@string/agreement_card"
            android:textAlignment="center"
            android:textColor="@android:color/white"

            android:textSize="@dimen/textsize_username_card" />


        <TextView
            android:id="@+id/textContentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="14dp"
            android:paddingTop="6dp"
            android:text="@string/lorem"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_content_card" />


    </LinearLayout>


</FrameLayout>

</android.support.v7.widget.CardView>
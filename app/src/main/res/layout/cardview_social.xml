<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prictureCard_social"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview_agreement"
    android:layout_marginBottom="@dimen/activity_vertical_margin"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/picture_CardSocial"
            android:layout_width="@dimen/height_cardview"
            android:layout_height="@dimen/height_cardview"
            android:scaleType="centerCrop"
            android:transitionName="@string/transitionname_picture"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tittle_social"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/tittle_social_card"
                android:textAlignment="center"
                android:textColor="@android:color/black"

                android:textSize="@dimen/textsize_username_card" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>